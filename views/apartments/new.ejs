<% include ../partial/header.ejs %>

<div class="container">
    <h1 class="text-center">Create New Apartment</h1>
    <div class="row justify-content-center">
        <div class="container col-5">
            <form action="/apartments" method="POST">
                <div class="form-group">
                    <label for="campname">Apartment Name</label>
                    <input id="campname" class="form-control" type="text" name="campname">
                </div>
                <div class="form-group">
                    <label for="campprice">Apartment Price</label>
                    <input id="campprice" class="form-control" type="number" min="0.01" step="0.01" name="campprice">
                </div>
                <div class="form-group">
                        <label for="campimg">Image url</label>
                        <input id="campimg" class="form-control" type="text" name="campimg">
                </div>
                <div class="form-group">
                    <label for="campdesc">Apartment Description</label>
                    <input id="campdesc" class="form-control" type="text" name="campdesc">
                </div>
                <button type="submit" class="btn btn-primary">Submit!</button>
            </form>
            <a href="/apartments">Go Back</a>
        </div>
    </div>
</div>




