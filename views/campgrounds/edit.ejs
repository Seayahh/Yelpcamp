<% include ../partial/header.ejs %>

<div class="container">
    <h1 class="text-center">Edit <%= campground.name %></h1>
    <div class="row justify-content-center">
        <div class="container col-5">
            <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="campname">Camp Name</label>
                    <input id="campname" class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="campprice">Camp Price</label>
                    <input id="campprice" class="form-control" type="number" min="0.01" step="0.01" name="campground[price]" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                        <label for="campimg">Image url</label>
                        <input id="campimg" class="form-control" type="text" name="campground[img]" value="<%= campground.img %>">
                </div>
                <div class="form-group">
                    <label for="campdesc">Camp desc</label>
                    <input id="campdesc" class="form-control" type="text" name="campground[desc]" value="<%= campground.desc %>">
                </div>
                <button type="submit" class="btn btn-primary">Submit!</button>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>




<% include ../partial/footer.ejs%>